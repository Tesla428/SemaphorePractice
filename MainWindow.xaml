<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemaphorePractice"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="SemaphorePractice.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10">
            <CheckBox DockPanel.Dock="Top" Content="Enable" Margin="10" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"  Height="15" HorizontalAlignment="Right" Width="75"/>
            <telerik:RadButton DockPanel.Dock="Bottom" Content="Clear" HorizontalAlignment="Right" Height="28" Margin="10" Width="62" Click="RadButton_Click"/>
            <TextBox Name="txtBox" Margin="10" TextWrapping="Wrap" />
        </DockPanel>
    </Grid>
</Window>
